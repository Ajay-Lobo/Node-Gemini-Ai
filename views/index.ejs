<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Gemini AI</title>
    <link rel="icon" href="/favicon.ico" type="image/x-icon" />
    <link rel="icon" href="/favicon-16x16.png" sizes="16x16" type="image/png" />
    <link rel="icon" href="/favicon-32x32.png" sizes="32x32" type="image/png" />

    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <link
      href="https://fonts.googleapis.com/css?family=Roboto&display=swap"
      rel="stylesheet"
    />

    <div class="wrapper">
      <div class="label">Gemini AI Search</div>
      <form action="/ask" method="POST">
        <div class="searchBar">
          <input
            id="searchQueryInput"
            type="text"
            name="question"
            placeholder="Search"
            value=""
          />
          <button id="searchQuerySubmit" type="submit" name="searchQuerySubmit">
            <svg style="width: 24px; height: 24px" viewBox="0 0 24 24">
              <path
                fill="var(--button-icon-color)"
                d="M9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.44,13.73L14.71,14H15.5L20.5,19L19,20.5L14,15.5V14.71L13.73,14.44C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3M9.5,5C7,5 5,7 5,9.5C5,12 7,14 9.5,14C12,14 14,12 14,9.5C14,7 12,5 9.5,5Z"
              />
            </svg>
          </button>
        </div>
      </form>
    </div>

    <div id="response" class="response">
      <% if (response) { %>
      <div id="responseText" class="responseText"><%- response %></div>
      <% } %>
    </div>

    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const responseElement = document.getElementById("responseText");

        if (responseElement) {
          let text = responseElement.innerHTML;

          responseElement.innerHTML = ""; // Clear the existing text
          let index = 0;
          const typingSpeed = 50; 
          const fullText = text;

          function type() {
            if (index < fullText.length) {
              responseElement.innerHTML += fullText.charAt(index);
              index++;
              setTimeout(type, typingSpeed);
            }
          }

          type();
        }
      });
    </script>
  </body>
</html>
